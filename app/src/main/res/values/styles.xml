<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <style name="dialog" parent="Base.Theme.MaterialComponents.Light.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/materialAlertPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/materialAlertNegativeButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/materialAlertNeutralButton</item>
    </style>

    <style name="materialAlertPositiveButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="materialAlertNegativeButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="materialAlertNeutralButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="AuthText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="fullWidthButton" parent="button">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="fullWidthTextInputLayout" parent="textInputLayout">
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
