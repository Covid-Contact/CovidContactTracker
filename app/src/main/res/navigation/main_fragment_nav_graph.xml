<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_fragment_nav_graph"
    app:startDestination="@id/contactNetworksFragment">
    <fragment
        android:id="@+id/contactNetworksFragment"
        android:name="cat.covidcontact.tracker.feature.contactnetworks.ContactNetworksFragment"
        android:label="@string/contact_networks_fragment"
        tools:layout="@layout/fragment_contact_networks">
        <action
            android:id="@+id/action_contactNetworksFragment_to_createContactNetworkFragment"
            app:destination="@id/createContactNetworkFragment" />
        <action
            android:id="@+id/action_contactNetworksFragment_to_contactNetworkSettingsFragment"
            app:destination="@id/contactNetworkSettingsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="cat.covidcontact.tracker.feature.search.SearchFragment"
        android:label="@string/search_contact_networks_fragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="cat.covidcontact.tracker.feature.profile.ProfileFragment"
        android:label="@string/profile_bottom_fragments"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/createContactNetworkFragment"
        android:name="cat.covidcontact.tracker.feature.createcontactnetwork.CreateContactNetworkFragment"
        android:label="@string/create_contact_network_fragment"
        tools:layout="@layout/fragment_create_contact_network" />
    <fragment
        android:id="@+id/contactNetworkSettingsFragment"
        android:name="cat.covidcontact.tracker.feature.contactnetworksettings.ContactNetworkSettingsFragment"
        android:label="{name}"
        tools:layout="@layout/fragment_contact_network_settings">
        <argument
            android:name="contactNetwork"
            app:argType="cat.covidcontact.model.ContactNetwork" />
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
</navigation>